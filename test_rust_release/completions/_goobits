#compdef goobits
# Zsh completion script for Goobits CLI Framework (goobits)
# Auto-generated by goobits-cli

# Main completion function
_goobits() {
    local context state state_descr line
    typeset -A opt_args

    # Try dynamic completion first
    if _goobits_dynamic; then
        return 0
    fi

    # Fallback to static completion
    _goobits_static
}

# Dynamic completion using CLI's built-in completion
_goobits_dynamic() {
    local cli_bin="goobits"
    
    # Check if CLI supports completion
    if ! command -v "$cli_bin" >/dev/null 2>&1; then
        return 1
    fi
    
    # Get completion suggestions from the CLI itself
    local suggestions
    suggestions=(${(f)"$("$cli_bin" _completion zsh "$words" "$#BUFFER" 2>/dev/null)"})
    
    if [[ $#suggestions -gt 0 ]]; then
        compadd -a suggestions
        return 0
    fi
    
    return 1
}

# Static completion as fallback
_goobits_static() {
    local context state state_descr line
    typeset -A opt_args

    _arguments -C \
        '(-v --verbose)'{-v,--verbose}'[Enable verbose output with detailed error messages and stack traces]' \
        '(-h --help)'{-h,--help}'[Show help information]' \
        '(-V --version)'{-V,--version}'[Show version information]' \
        '1: :_goobits_commands' \
        '*::arg:->args' && return 0

    case $state in
        args)
            case $words[1] in
                build)
                    _goobits_build
                    ;;
                init)
                    _goobits_init
                    ;;
                serve)
                    _goobits_serve
                    ;;
                plugin)
                    _goobits_plugin
                    ;;
                upgrade)
                    _goobits_upgrade
                    ;;
            esac
            ;;
    esac
}

# Command completion
_goobits_commands() {
    local commands=(
        'build:üî® Build CLI and setup scripts from goobits.yaml configuration'
        'init:üÜï Create initial goobits.yaml template'
        'serve:üåê Serve local PyPI-compatible package index'
        'upgrade:Upgrade Goobits CLI Framework to the latest version'
        'plugin:üîå Manage plugins for Goobits CLI Framework'
        'help:Show help information'
    )
    _describe 'commands' commands
}

# build command completion
_goobits_build() {
    _arguments \
        '(-o --output-dir)'{-o,--output-dir}'[üìÅ Output directory (defaults to same directory as config file)]:str:' \
        '--output[üìù Output filename for generated CLI (defaults to 'generated_cli.py')]:str:' \
        '--backup[üíæ Create backup files (.bak) when overwriting existing files]' \
        '--universal-templates[üß™ Use Universal Template System (experimental)]' \
        '(-h --help)'{-h,--help}'[Show help for build command]' \
        '::config_path:Path to goobits.yaml file (defaults to ./goobits.yaml)' \
}
# init command completion
_goobits_init() {
    _arguments \
        '(-t --template)'{-t,--template}'[üéØ Template type]:str:(basic advanced api-client text-processor)' \
        '--force[üî• Overwrite existing goobits.yaml file]' \
        '(-h --help)'{-h,--help}'[Show help for init command]' \
        '::project_name:Name of the project (optional)' \
}
# serve command completion
_goobits_serve() {
    _arguments \
        '--host[üåç Host to bind the server to]:str:' \
        '(-p --port)'{-p,--port}'[üîå Port to run the server on]:int:' \
        '(-h --help)'{-h,--help}'[Show help for serve command]' \
        ':directory:Directory containing packages to serve' \
}

# Plugin command completion
_goobits_plugin() {
    local plugin_commands=(
        'list:List all available and loaded plugins'
        'install:Install a plugin from crates.io'
        'uninstall:Uninstall a plugin'
        'create:Create a new plugin template'
        'info:Show detailed information about a plugin'
    )
    
    if [[ $CURRENT -eq 2 ]]; then
        _describe 'plugin commands' plugin_commands
    else
        case $words[2] in
            list)
                _arguments \
                    '--json[Output as JSON]' \
                    '(-h --help)'{-h,--help}'[Show help for plugin list]'
                ;;
            install)
                _arguments \
                    '(-g --global)'{-g,--global}'[Install globally]' \
                    '--version[Install specific version]:version:' \
                    '(-h --help)'{-h,--help}'[Show help for plugin install]' \
                    ':plugin-name:'
                ;;
            uninstall|remove)
                _arguments \
                    '(-g --global)'{-g,--global}'[Uninstall globally]' \
                    '(-h --help)'{-h,--help}'[Show help for plugin uninstall]' \
                    ':plugin-name:'
                ;;
            create)
                _arguments \
                    '--type[Plugin type]:type:(library binary)' \
                    '--dir[Output directory]:directory:_directories' \
                    '(-h --help)'{-h,--help}'[Show help for plugin create]' \
                    ':plugin-name:'
                ;;
            info)
                _arguments \
                    '(-h --help)'{-h,--help}'[Show help for plugin info]' \
                    ':plugin-name:'
                ;;
        esac
    fi
}

# Upgrade command completion
_goobits_upgrade() {
    _arguments \
        '--check[Check for updates without installing]' \
        '--version[Install specific version]:version:' \
        '--pre[Include pre-release versions]' \
        '--dry-run[Show what would be done without doing it]' \
        '(-h --help)'{-h,--help}'[Show help for upgrade command]'
}

# Custom completion functions for specific option types

# Load the completion
_goobits "$@"

# Enable completion caching for better performance
zstyle ':completion:*:*:goobits:*' cache-policy _goobits_cache_policy
_goobits_cache_policy() {
    # Cache completions for 1 hour
    [[ -n "$1" && "$1" -ot "$(date -v-1H)" ]]
}

# Add color support
zstyle ':completion:*:*:goobits:*:descriptions' format '%F{green}-- %d --%f'
zstyle ':completion:*:*:goobits:*:commands' group-name commands
zstyle ':completion:*:*:goobits:*:options' group-name options