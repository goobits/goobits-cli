{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "isolatedModules": true,
    "noEmitOnError": true,
    "incremental": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo"
  },
  "include": [
    "cli.ts",
    "bin/**/*.ts",
    "commands/**/*.ts",
    "lib/**/*.ts",
    "examples/**/*.ts",
    "types/**/*.ts",
    
    "src/hooks.ts",
    
    "scripts/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "**/*.test.ts",
    "**/*.spec.ts",
    "test/**/*",
    "tests/**/*",
    "**/*.d.ts"
  ]
}