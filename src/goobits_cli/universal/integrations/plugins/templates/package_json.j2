{
  "name": "{{ plugin_name }}",
  "version": "{{ plugin_version }}",
  "description": "{{ plugin_description }}",
  "main": "{% if plugin_language == 'typescript' %}dist/index.js{% else %}index.js{% endif %}",
  "types": "{% if plugin_language == 'typescript' %}dist/index.d.ts{% endif %}",
  "scripts": {
    {% if plugin_language == 'typescript' %}
    "build": "tsc",
    "watch": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    {% endif %}
    "test": "{% if plugin_language == 'typescript' %}jest{% else %}mocha{% endif %}",
    "lint": "{% if plugin_language == 'typescript' %}eslint src --ext .ts{% else %}eslint .{% endif %}",
    "format": "prettier --write .",
    "start": "node {% if plugin_language == 'typescript' %}dist/index.js{% else %}index.js{% endif %}"
  },
  "keywords": [
    "goobits",
    "cli",
    "plugin",
    "{{ plugin_type }}",
    {% for tag in plugin_tags %}
    "{{ tag }}"{% if not loop.last %},{% endif %}
    {% endfor %}
  ],
  "author": "{{ plugin_author }}",
  "license": "{{ plugin_license | default('MIT') }}",
  "repository": {
    "type": "git",
    "url": "{{ plugin_repository }}"
  },
  "homepage": "{{ plugin_homepage }}",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "commander": "^9.0.0",
    {% for dep in plugin_npm_requirements %}
    "{{ dep.split('@')[0] }}": "{{ dep.split('@')[1] if '@' in dep else '^1.0.0' }}"{% if not loop.last %},{% endif %}
    {% endfor %}
  },
  "devDependencies": {
    {% if plugin_language == 'typescript' %}
    "typescript": "^4.9.0",
    "@types/node": "^18.0.0",
    "ts-node": "^10.9.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    {% else %}
    "mocha": "^10.0.0",
    "chai": "^4.3.0",
    "eslint": "^8.0.0",
    {% endif %}
    "prettier": "^2.8.0",
    "nodemon": "^2.0.0"
  },
  "peerDependencies": {
    "goobits-cli": ">={{ plugin_min_goobits_version | default('1.4.0') }}"
  },
  "files": [
    {% if plugin_language == 'typescript' %}
    "dist/**/*",
    {% else %}
    "index.js",
    "lib/**/*",
    {% endif %}
    "plugin.yaml",
    "README.md",
    "LICENSE"
  ],
  "goobits": {
    "plugin": {
      "type": "{{ plugin_type }}",
      "language": "{{ plugin_language }}",
      "entry": "{% if plugin_language == 'typescript' %}dist/index.js{% else %}index.js{% endif %}"
    }
  }
}