{#
Universal Component: pyproject.toml template for Python projects

This template generates a pyproject.toml file for Python CLI packages,
providing proper package metadata and entry points for installation.

Template Variables Expected:
  - project: Project configuration  
  - installation: Installation configuration
  - cli: CLI configuration
  - dependencies: Dependencies and extras
#}
[build-system]
requires = ["setuptools>=61.0", "wheel"]
build-backend = "setuptools.build_meta"

[project]
name = "{{ installation.pypi_name | default(project.package_name) | default(project.name) }}"
version = "{{ project.version }}"
description = "{{ project.description }}"
readme = "README.md"
license = {text = "{{ project.license | default('MIT') }}"}
authors = [
{%- if project.email %}
    {name = "{{ project.author }}", email = "{{ project.email }}"},
{%- else %}
    {name = "{{ project.author }}"},
{%- endif %}
]
keywords = {{ project.keywords | default([]) | tojson }}
classifiers = [
    "Development Status :: 4 - Beta",
    "Intended Audience :: Developers",
    "License :: OSI Approved :: {{ project.license | default('MIT') }} License",
    "Operating System :: OS Independent",
    "Programming Language :: Python :: 3",
    "Programming Language :: Python :: 3.8",
    "Programming Language :: Python :: 3.9",
    "Programming Language :: Python :: 3.10",
    "Programming Language :: Python :: 3.11",
    "Programming Language :: Python :: 3.12",
    "Topic :: Software Development :: Libraries :: Python Modules",
    "Topic :: System :: Systems Administration",
    "Topic :: Utilities",
]
requires-python = ">={{ project.python_version | default('3.8') }}"
dependencies = [
    "click>=8.0.0",
    "rich-click>=1.6.0",
    "rich>=12.0.0"
]

{%- if installation.extras and installation.extras.python %}

[project.optional-dependencies]
dev = [
    "pytest>=7.0.0",
    "pytest-cov>=4.0.0",
    "black>=22.0.0",
    "flake8>=6.0.0",
    "mypy>=1.0.0"
]
{%- endif %}

[project.urls]
{%- if project.homepage %}
"Homepage" = "{{ project.homepage }}"
{%- endif %}
{%- if project.repository %}
"Repository" = "{{ project.repository }}"
"Bug Tracker" = "{{ project.repository }}/issues"
{%- endif %}

[project.scripts]
{{ project.command_name }} = "{{ project.package_name | replace('-', '_') }}.cli:cli_entry"

[tool.setuptools.packages.find]
where = ["src"]

[tool.black]
line-length = 88
target-version = ['py38']
include = '\.pyi?$'
extend-exclude = '''
/(
  # directories
  \.eggs
  | \.git
  | \.hg
  | \.mypy_cache
  | \.tox
  | \.venv
  | build
  | dist
)/
'''

[tool.isort]
profile = "black"
multi_line_output = 3
line_length = 88

[tool.mypy]
python_version = "{{ project.python_version | default('3.8') }}"
warn_return_any = true
warn_unused_configs = true
disallow_untyped_defs = true
disallow_incomplete_defs = true
check_untyped_defs = true
disallow_untyped_decorators = true
no_implicit_optional = true
warn_redundant_casts = true
warn_unused_ignores = true
warn_no_return = true
warn_unreachable = true
strict_equality = true

[tool.pytest.ini_options]
minversion = "6.0"
addopts = "-ra -q --strict-markers"
testpaths = [
    "tests",
]