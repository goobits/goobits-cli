{# Universal Cargo Configuration Template
   
   This template generates Cargo.toml files for Rust projects,
   supporting all major features and dependencies.
   
   Variables expected:
   - language: Target language (should be 'rust')
   - project: Project metadata (package_name, command_name, display_name, etc.)
   - cli: CLI schema with commands
#}

{% if language == 'rust' %}
[package]
name = "{{ project.package_name | default(project.command_name) }}"
version = "{{ project.version | default('0.1.0') }}"
edition = "2021"
authors = ["{{ project.author | default('Unknown Author') }} <{{ project.email | default('unknown@example.com') }}>"]
description = "{{ project.description | default(project.display_name | default(project.package_name)) }}"
{% if project.license -%}
license = "{{ project.license }}"
{% endif -%}
{% if project.homepage -%}
homepage = "{{ project.homepage }}"
{% endif -%}
{% if project.repository -%}
repository = "{{ project.repository }}"
{% endif -%}
{% if project.keywords -%}
keywords = {{ project.keywords | tojson }}
{% endif -%}
documentation = "https://docs.rs/{{ project.package_name | default(project.command_name) }}"
readme = "README.md"
exclude = [
    ".gitignore",
    "Cargo.lock",
]

[[bin]]
name = "{{ project.command_name }}"
path = "src/main.rs"

{% set features = feature_requirements | default({}) %}

[dependencies]
# Core dependencies - always included
clap = { version = "4.4", features = ["derive"{% if features.color_support %}, "color"{% endif %}{% if features.complex_parsing %}, "suggestions"{% endif %}] }
anyhow = "1.0"
thiserror = "1.0"

# Serde dependencies - always included because Universal Template System generates code that uses them
serde = { version = "1.0", features = ["derive"] }
serde_json = "1.0"
serde_yaml = "0.9"

# Time/date handling - always included because logger uses it
chrono = { version = "0.4", features = ["serde"] }

# Conditional dependencies based on detected features
{% if features.config_management -%}
# Additional config management dependencies (serde already included above)
{% endif -%}

{% if features.async_features -%}
tokio = { version = "1.0", features = ["full"], optional = true }
{% endif -%}

# Note: chrono is now included in core dependencies above

{% if features.complex_parsing or features.interactive_mode -%}
once_cell = "1.19"
{% endif -%}

{% if features.config_management -%}
uuid = { version = "1.0", features = ["v4", "serde"] }
{% endif -%}

# Optional dependencies for advanced features
{% if features.color_support -%}
colored = { version = "2.0", optional = true }
{% endif -%}

{% if features.interactive_mode -%}
dialoguer = { version = "0.11", optional = true }
{% endif -%}

{% if features.progress_features -%}
indicatif = { version = "0.17", optional = true }
{% endif -%}

{% if features.table_formatting -%}
tabled = { version = "0.15", optional = true }
comfy-table = { version = "7.0", optional = true }
{% endif -%}

{% if project.dependencies and project.dependencies.required -%}
# Project-specific required dependencies
{% for dep in project.dependencies.required -%}
{{ dep.name }} = "{{ dep.version | default('*') }}"
{% endfor -%}
{% endif -%}

{% if project.dependencies and project.dependencies.optional -%}
# Project-specific optional dependencies  
{% for dep in project.dependencies.optional -%}
{{ dep.name }} = { version = "{{ dep.version | default('*') }}", optional = true }
{% endfor -%}
{% endif -%}

[features]
# Feature flags based on detected CLI requirements
default = [{% if features.color_support %}"colored"{% endif %}]

# Granular feature sets
{% if features.async_features -%}
async = ["tokio"]
{% endif -%}

{% if features.interactive_mode -%}
interactive = ["dialoguer"{% if features.color_support %}, "colored"{% endif %}]
{% endif -%}

{% if features.progress_features -%}
progress = ["indicatif"{% if features.color_support %}, "colored"{% endif %}]
{% endif -%}

{% if features.table_formatting -%}
tables = ["tabled", "comfy-table"]
{% endif -%}

# Convenience feature combinations
{% set full_features = [] -%}
{% if features.async_features -%}{% set _ = full_features.append("tokio") -%}{% endif -%}
{% if features.color_support -%}{% set _ = full_features.append("colored") -%}{% endif -%}
{% if features.interactive_mode -%}{% set _ = full_features.append("dialoguer") -%}{% endif -%}
{% if features.progress_features -%}{% set _ = full_features.append("indicatif") -%}{% endif -%}
{% if features.table_formatting -%}
{% set _ = full_features.append("tabled") -%}
{% set _ = full_features.append("comfy-table") -%}
{% endif -%}
{% if full_features -%}
full = {{ full_features | tojson }}
{% endif -%}

# Development features
{% if full_features -%}
dev = {{ full_features | tojson }}
{% endif -%}

[profile.release]
lto = true
codegen-units = 1
panic = "abort"
strip = true

[profile.dev]
debug = true
opt-level = 0

{%- elif language == 'nodejs' -%}
{# Node.js projects don't use Cargo.toml #}
{%- elif language == 'typescript' -%}
{# TypeScript projects don't use Cargo.toml #}
{%- elif language == 'python' -%}
{# Python projects don't use Cargo.toml #}
{%- else -%}
# Cargo.toml not applicable for {{ language }}
{% endif %}