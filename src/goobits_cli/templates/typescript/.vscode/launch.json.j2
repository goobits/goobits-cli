{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "üöÄ Debug CLI",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/index.ts",
      "args": ["--help"],
      "runtimeArgs": [
        "--loader",
        "ts-node/esm"
      ],
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "*"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ],
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ]
    },
    
    {
      "name": "üîß Debug CLI with Custom Args",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/index.ts",
      "args": [],
      "runtimeArgs": [
        "--loader",
        "ts-node/esm"
      ],
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "*"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ]
    },
    
    {
      "name": "üèóÔ∏è  Debug Built CLI",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/dist/bin/cli.js",
      "args": ["--help"],
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "*"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ],
      "preLaunchTask": "build"
    },
    
    {% for cmd_name, cmd_data in cli.commands.items() %}
    {
      "name": "üéØ Debug '{{ cmd_name }}' Command",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/index.ts",
      "args": [
        "{{ cmd_name }}"{% if cmd_data.args %},
        {% for arg in cmd_data.args %}
        {% if arg.required %}"${input:{{ cmd_name }}_{{ arg.name }}}"{% else %}"${input:{{ cmd_name }}_{{ arg.name }}_optional}"{% endif %}{% if not loop.last %},{% endif %}
        {% endfor %}{% endif %}
      ],
      "runtimeArgs": [
        "--loader",
        "ts-node/esm"
      ],
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "*"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ]
    }{% if not loop.last %},{% endif %}
    {% endfor %}
    
    {
      "name": "üß™ Debug Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/node",
      "args": [
        "--loader",
        "ts-node/esm",
        "--test",
        "test/**/*.test.ts"
      ],
      "env": {
        "NODE_ENV": "test",
        "DEBUG": "*"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ]
    },
    
    {
      "name": "üîç Debug Current Test File",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/node",
      "args": [
        "--loader",
        "ts-node/esm",
        "--test",
        "${file}"
      ],
      "env": {
        "NODE_ENV": "test",
        "DEBUG": "*"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ]
    },
    
    {
      "name": "üöÄ Attach to Running Process",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "address": "localhost",
      "localRoot": "${workspaceFolder}",
      "remoteRoot": null,
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ]
    }
  ],
  
  "inputs": [
    {% for cmd_name, cmd_data in cli.commands.items() %}
    {% if cmd_data.args %}
    {% for arg in cmd_data.args %}
    {
      "id": "{{ cmd_name }}_{{ arg.name }}{% if not arg.required %}_optional{% endif %}",
      "description": "{{ arg.desc }}{% if not arg.required %} (optional){% endif %}",
      "default": "{% if arg.choices %}{{ arg.choices[0] }}{% elif arg.type == 'number' %}1{% elif arg.type == 'boolean' %}true{% else %}test{% endif %}",
      "type": "promptString"{% if arg.choices %},
      "options": [
        {% for choice in arg.choices %}
        "{{ choice }}"{% if not loop.last %},{% endif %}
        {% endfor %}
      ]{% endif %}
    }{% if not (loop.last and cmd_name == cli.commands.keys() | list | last) %},{% endif %}
    {% endfor %}
    {% endif %}
    {% endfor %}
  ]
}