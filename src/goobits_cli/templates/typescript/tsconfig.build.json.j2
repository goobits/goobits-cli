{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "isolatedModules": true,
    "noEmitOnError": true,
    "incremental": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo"
  },
  "include": [
    "index.ts",
    "bin/**/*.ts",
    "commands/**/*.ts",
    "lib/**/*.ts",
    "examples/**/*.ts",
    "types/**/*.ts",
    {% if hooks_path %}
    "{{ hooks_path }}",
    {% else %}
    "app_hooks.ts",
    {% endif %}
    "scripts/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "**/*.test.ts",
    "**/*.spec.ts",
    "test/**/*",
    "tests/**/*",
    "**/*.d.ts"
  ]
}