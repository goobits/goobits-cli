{
  "name": "{{ package_name }}",
  "version": "{{ version | default('1.0.0') }}",
  "description": "{{ description | default(cli.description if cli else 'A CLI tool built with goobits') }}",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "{{ command_name }}": "./dist/bin/cli.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:watch": "tsc -p tsconfig.build.json --watch",
    "build:webpack": "webpack --mode production",
    "build:webpack:dev": "webpack --mode development --watch",
    "build:rollup": "NODE_ENV=production rollup -c",
    "build:rollup:dev": "rollup -c --watch",
    "build:esbuild": "node esbuild.config.js prod",
    "build:esbuild:dev": "node esbuild.config.js dev",
    "build:fast": "node esbuild.config.js prod",
    "start": "ts-node index.ts",
    "dev": "ts-node-dev --respawn --transpile-only index.ts",
    "dev:esbuild": "node esbuild.config.js serve",
    "test": "node --loader ts-node/esm --test test/**/*.test.ts",
    "test:watch": "node --loader ts-node/esm --test --watch test/**/*.test.ts",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,json,md}\"",
    "analyze": "node esbuild.config.js analyze",
    "clean": "rimraf dist build coverage .nyc_output *.tsbuildinfo",
    "prepare": "npm run build:fast",
    "prepack": "npm run clean && npm run build:fast",
    "postinstall": "npm run build:fast && node dist/scripts/postinstall.js || true"
  },
  "keywords": [
    "cli",
    "typescript"{% if cli and cli.tags %},
    {% for tag in cli.tags %}"{{ tag }}"{% if not loop.last %},{% endif %}
    {% endfor %}{% endif %}
  ],
  "author": "{{ author | default('') }}",
  "license": "{{ license | default('MIT') }}",
  "dependencies": {
    "commander": "^11.1.0",
    "chalk": "^5.3.0",
    "reflect-metadata": "^0.2.0"{% if installation and installation.extras and installation.extras.npm %},
    {% for package in installation.extras.npm %}
    {% if '@' in package %}
    {% set parts = package.rsplit('@', 1) %}
    "{{ parts[0] }}": "^{{ parts[1] }}"{% else %}"{{ package }}": "latest"{% endif %}{% if not loop.last %},{% endif %}
    {% endfor %}{% endif %}
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "@types/node": "^20.0.0",
    "ts-node": "^10.9.0",
    "ts-node-dev": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-node-externals": "^3.0.0",
    "ts-loader": "^9.5.1",
    "source-map-loader": "^4.0.1",
    "terser-webpack-plugin": "^5.3.9",
    "rollup": "^4.9.0",
    "@rollup/plugin-typescript": "^11.1.5",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "esbuild": "^0.19.9",
    "esbuild-node-externals": "^1.9.0",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "type": "module",
  "files": [
    "dist/",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "{{ repository | default('') }}"
  },
  "bugs": {
    "url": "{{ bugs_url | default('') }}"
  },
  "homepage": "{{ homepage | default('') }}"
}