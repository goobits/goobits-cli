#!/bin/bash
# Bash completion script for {{ display_name }} ({{ command_name }})
# Auto-generated by goobits-cli

_{{ command_name | replace('-', '_') }}_completions() {
    local cur prev words cword
    _init_completion || return

    # Get the current CLI binary path
    local cli_bin="{{ command_name }}"
    
    # Check if CLI supports completion
    if ! command -v "$cli_bin" >/dev/null 2>&1; then
        return 0
    fi
    
    # Get completion suggestions from the CLI itself
    local suggestions
    suggestions=$("$cli_bin" _completion bash "$COMP_LINE" "$COMP_POINT" 2>/dev/null)
    
    if [[ $? -eq 0 && -n "$suggestions" ]]; then
        COMPREPLY=($(compgen -W "$suggestions" -- "$cur"))
        return 0
    fi
    
    # Fallback to static completions
    case "${prev}" in
        {{ command_name }})
            # Top level commands
            local commands="{% for cmd_name, cmd_data in cli.commands.items() %}{{ cmd_name }} {% endfor %}{% if cli and (cli.enable_upgrade_command is not defined or cli.enable_upgrade_command) %}upgrade {% endif %}plugin help"
            COMPREPLY=($(compgen -W "$commands" -- "$cur"))
            return 0
            ;;
        {% for cmd_name, cmd_data in cli.commands.items() %}
        {{ cmd_name }})
            {% if cmd_data.subcommands %}
            # Subcommands for {{ cmd_name }}
            local subcommands="{% for subcmd_name in cmd_data.subcommands.keys() %}{{ subcmd_name }} {% endfor %}"
            COMPREPLY=($(compgen -W "$subcommands" -- "$cur"))
            {% else %}
            # Options for {{ cmd_name }}
            local options="{% if cmd_data.options %}{% for opt in cmd_data.options %}--{{ opt.name }} {% if opt.short %}-{{ opt.short }} {% endif %}{% endfor %}{% endif %}--help -h"
            COMPREPLY=($(compgen -W "$options" -- "$cur"))
            {% endif %}
            return 0
            ;;
        {% endfor %}
        plugin)
            local plugin_commands="list install uninstall create info help"
            COMPREPLY=($(compgen -W "$plugin_commands" -- "$cur"))
            return 0
            ;;
        upgrade)
            local upgrade_options="--check --version --pre --dry-run --help -h"
            COMPREPLY=($(compgen -W "$upgrade_options" -- "$cur"))
            return 0
            ;;
        --version|-V)
            # Don't complete after version flags
            return 0
            ;;
        --help|-h)
            # Don't complete after help flags
            return 0
            ;;
        *)
            # Global options
            local global_options="{% for option in cli.options %}--{{ option.name }} {% if option.short %}-{{ option.short }} {% endif %}{% endfor %}--help -h --version -V"
            
            # Check if we're in a subcommand context
            local i=1
            local in_subcommand=""
            while [[ $i -lt $cword ]]; do
                case "${words[$i]}" in
                    {% for cmd_name, cmd_data in cli.commands.items() %}
                    {{ cmd_name }})
                        in_subcommand="{{ cmd_name }}"
                        break
                        ;;
                    {% endfor %}
                    plugin|upgrade)
                        in_subcommand="${words[$i]}"
                        break
                        ;;
                esac
                ((i++))
            done
            
            if [[ -n "$in_subcommand" ]]; then
                # We're in a subcommand, offer subcommand-specific options
                case "$in_subcommand" in
                    {% for cmd_name, cmd_data in cli.commands.items() %}
                    {{ cmd_name }})
                        {% if cmd_data.options %}
                        local cmd_options="{% for opt in cmd_data.options %}--{{ opt.name }} {% if opt.short %}-{{ opt.short }} {% endif %}{% endfor %}--help -h"
                        COMPREPLY=($(compgen -W "$cmd_options" -- "$cur"))
                        {% endif %}
                        ;;
                    {% endfor %}
                    plugin)
                        local plugin_options="--json --global --version --type --dir --help -h"
                        COMPREPLY=($(compgen -W "$plugin_options" -- "$cur"))
                        ;;
                    upgrade)
                        local upgrade_options="--check --version --pre --dry-run --help -h"
                        COMPREPLY=($(compgen -W "$upgrade_options" -- "$cur"))
                        ;;
                esac
            else
                COMPREPLY=($(compgen -W "$global_options" -- "$cur"))
            fi
            return 0
            ;;
    esac

    # File completion for certain options
    case "${prev}" in
        --config|--file|-f)
            COMPREPLY=($(compgen -f -- "$cur"))
            return 0
            ;;
        --dir|--directory|-d)
            COMPREPLY=($(compgen -d -- "$cur"))
            return 0
            ;;
    esac

    return 0
}

# Register the completion function
complete -F _{{ command_name | replace('-', '_') }}_completions {{ command_name }}

# Also register for common variations
{% if command_name != cli.name %}
complete -F _{{ command_name | replace('-', '_') }}_completions {{ cli.name }}
{% endif %}

# Support for cargo installation paths
if [[ -n "${CARGO_HOME:-}" ]]; then
    complete -F _{{ command_name | replace('-', '_') }}_completions "${CARGO_HOME}/bin/{{ command_name }}"
fi

# Support for default cargo binary location
if [[ -d "$HOME/.cargo/bin" ]]; then
    complete -F _{{ command_name | replace('-', '_') }}_completions "$HOME/.cargo/bin/{{ command_name }}"
fi