#compdef demo
# Zsh completion script for Nested Command Demo (demo)
# Auto-generated by goobits-cli

# Main completion function
_demo() {
    local context state state_descr line
    typeset -A opt_args

    # Try dynamic completion first
    if _demo_dynamic; then
        return 0
    fi

    # Fallback to static completion
    _demo_static
}

# Dynamic completion using CLI's built-in completion
_demo_dynamic() {
    local cli_bin="demo"
    
    # Check if CLI supports completion
    if ! command -v "$cli_bin" >/dev/null 2>&1; then
        return 1
    fi
    
    # Get completion suggestions from the CLI itself
    local suggestions
    suggestions=(${(f)"$("$cli_bin" _completion zsh "$words" "$#BUFFER" 2>/dev/null)"})
    
    if [[ $#suggestions -gt 0 ]]; then
        compadd -a suggestions
        return 0
    fi
    
    return 1
}

# Static completion as fallback
_demo_static() {
    local context state state_descr line
    typeset -A opt_args

    _arguments -C \
        '(-h --help)'{-h,--help}'[Show help information]' \
        '(-V --version)'{-V,--version}'[Show version information]' \
        '1: :_demo_commands' \
        '*::arg:->args' && return 0

    case $state in
        args)
            case $words[1] in
                simple)
                    _demo_simple
                    ;;
                database)
                    _demo_database_subcommands
                    ;;
                api)
                    _demo_api_subcommands
                    ;;
                plugin)
                    _demo_plugin
                    ;;
                upgrade)
                    _demo_upgrade
                    ;;
            esac
            ;;
    esac
}

# Command completion
_demo_commands() {
    local commands=(
        'simple:Simple command that works today'
        'database:Database operations'
        'api:API management'
        'upgrade:Upgrade Nested Command Demo to the latest version'
        'plugin:ðŸ”Œ Manage plugins for Nested Command Demo'
        'help:Show help information'
    )
    _describe 'commands' commands
}

# simple command completion
_demo_simple() {
    _arguments \
        '--verbose[Verbose output]' \
        '(-h --help)'{-h,--help}'[Show help for simple command]' \
        ':message:Message to display' \
}
# database subcommands completion
_demo_database_subcommands() {
    local subcommands=(
        'users:User management'
        'backup:Database backup operations'
    )
    
    if [[ $CURRENT -eq 2 ]]; then
        _describe 'database subcommands' subcommands
    else
        case $words[2] in
            users)
                _arguments \
                    '--format[Output format]:str:' \
                    '(-h --help)'{-h,--help}'[Show help for users subcommand]' \
                    ':action:Action to perform' \
                ;;
            backup)
                _arguments \
                    '--compress[Compress backup file]' \
                    '(-h --help)'{-h,--help}'[Show help for backup subcommand]' \
                ;;
        esac
    fi
}
# api subcommands completion
_demo_api_subcommands() {
    local subcommands=(
        'v1:API v1 endpoints'
    )
    
    if [[ $CURRENT -eq 2 ]]; then
        _describe 'api subcommands' subcommands
    else
        case $words[2] in
            v1)
                _arguments \
                    '(-h --help)'{-h,--help}'[Show help for v1 subcommand]' \
                ;;
        esac
    fi
}

# Plugin command completion
_demo_plugin() {
    local plugin_commands=(
        'list:List all available and loaded plugins'
        'install:Install a plugin from npm'
        'uninstall:Uninstall a plugin'
        'create:Create a new plugin template'
        'info:Show detailed information about a plugin'
    )
    
    if [[ $CURRENT -eq 2 ]]; then
        _describe 'plugin commands' plugin_commands
    else
        case $words[2] in
            list)
                _arguments \
                    '--json[Output as JSON]' \
                    '(-h --help)'{-h,--help}'[Show help for plugin list]'
                ;;
            install)
                _arguments \
                    '(-g --global)'{-g,--global}'[Install globally]' \
                    '--version[Install specific version]:version:' \
                    '(-h --help)'{-h,--help}'[Show help for plugin install]' \
                    ':plugin-name:'
                ;;
            uninstall|remove)
                _arguments \
                    '(-g --global)'{-g,--global}'[Uninstall globally]' \
                    '(-h --help)'{-h,--help}'[Show help for plugin uninstall]' \
                    ':plugin-name:'
                ;;
            create)
                _arguments \
                    '--type[Plugin type]:type:(function class npm)' \
                    '--dir[Output directory]:directory:_directories' \
                    '(-h --help)'{-h,--help}'[Show help for plugin create]' \
                    ':plugin-name:'
                ;;
            info)
                _arguments \
                    '(-h --help)'{-h,--help}'[Show help for plugin info]' \
                    ':plugin-name:'
                ;;
        esac
    fi
}

# Upgrade command completion
_demo_upgrade() {
    _arguments \
        '--check[Check for updates without installing]' \
        '--version[Install specific version]:version:' \
        '--pre[Include pre-release versions]' \
        '--dry-run[Show what would be done without doing it]' \
        '(-h --help)'{-h,--help}'[Show help for upgrade command]'
}

# Custom completion functions for specific option types

# Load the completion
_demo "$@"

# Enable completion caching for better performance
zstyle ':completion:*:*:demo:*' cache-policy _demo_cache_policy
_demo_cache_policy() {
    # Cache completions for 1 hour
    [[ -n "$1" && "$1" -ot "$(date -v-1H)" ]]
}

# Add color support
zstyle ':completion:*:*:demo:*:descriptions' format '%F{green}-- %d --%f'
zstyle ':completion:*:*:demo:*:commands' group-name commands
zstyle ':completion:*:*:demo:*:options' group-name options