#compdef demo_rust
# Zsh completion script for Demo Rust CLI (demo_rust)
# Auto-generated by goobits-cli

# Main completion function
_demo_rust() {
    local context state state_descr line
    typeset -A opt_args

    # Try dynamic completion first
    if _demo_rust_dynamic; then
        return 0
    fi

    # Fallback to static completion
    _demo_rust_static
}

# Dynamic completion using CLI's built-in completion
_demo_rust_dynamic() {
    local cli_bin="demo_rust"
    
    # Check if CLI supports completion
    if ! command -v "$cli_bin" >/dev/null 2>&1; then
        return 1
    fi
    
    # Get completion suggestions from the CLI itself
    local suggestions
    suggestions=(${(f)"$("$cli_bin" _completion zsh "$words" "$#BUFFER" 2>/dev/null)"})
    
    if [[ $#suggestions -gt 0 ]]; then
        compadd -a suggestions
        return 0
    fi
    
    return 1
}

# Static completion as fallback
_demo_rust_static() {
    local context state state_descr line
    typeset -A opt_args

    _arguments -C \
        '(-h --help)'{-h,--help}'[Show help information]' \
        '(-V --version)'{-V,--version}'[Show version information]' \
        '1: :_demo_rust_commands' \
        '*::arg:->args' && return 0

    case $state in
        args)
            case $words[1] in
                greet)
                    _demo_rust_greet
                    ;;
                info)
                    _demo_rust_info
                    ;;
                plugin)
                    _demo_rust_plugin
                    ;;
                upgrade)
                    _demo_rust_upgrade
                    ;;
            esac
            ;;
    esac
}

# Command completion
_demo_rust_commands() {
    local commands=(
        'greet:Greet someone with style'
        'info:Display system and environment information'
        'upgrade:Upgrade Demo Rust CLI to the latest version'
        'plugin:ðŸ”Œ Manage plugins for Demo Rust CLI'
        'help:Show help information'
    )
    _describe 'commands' commands
}

# greet command completion
_demo_rust_greet() {
    _arguments \
        '(-s --style)'{-s,--style}'[Greeting style]:str:(formal casual excited)' \
        '(-c --count)'{-c,--count}'[Repeat greeting N times]:int:' \
        '(-u --uppercase)'{-u,--uppercase}'[Convert to uppercase]' \
        '(-l --language)'{-l,--language}'[Language code]:str:(en es fr)' \
        '(-h --help)'{-h,--help}'[Show help for greet command]' \
        ':name:Name to greet' \
        '::message:Custom greeting message' \
}
# info command completion
_demo_rust_info() {
    _arguments \
        '(-f --format)'{-f,--format}'[Output format]:str:(text json yaml)' \
        '(-v --verbose)'{-v,--verbose}'[Show detailed information]' \
        '(-s --sections)'{-s,--sections}'[Comma-separated sections to show]:str:' \
        '(-h --help)'{-h,--help}'[Show help for info command]' \
}

# Plugin command completion
_demo_rust_plugin() {
    local plugin_commands=(
        'list:List all available and loaded plugins'
        'install:Install a plugin from crates.io'
        'uninstall:Uninstall a plugin'
        'create:Create a new plugin template'
        'info:Show detailed information about a plugin'
    )
    
    if [[ $CURRENT -eq 2 ]]; then
        _describe 'plugin commands' plugin_commands
    else
        case $words[2] in
            list)
                _arguments \
                    '--json[Output as JSON]' \
                    '(-h --help)'{-h,--help}'[Show help for plugin list]'
                ;;
            install)
                _arguments \
                    '(-g --global)'{-g,--global}'[Install globally]' \
                    '--version[Install specific version]:version:' \
                    '(-h --help)'{-h,--help}'[Show help for plugin install]' \
                    ':plugin-name:'
                ;;
            uninstall|remove)
                _arguments \
                    '(-g --global)'{-g,--global}'[Uninstall globally]' \
                    '(-h --help)'{-h,--help}'[Show help for plugin uninstall]' \
                    ':plugin-name:'
                ;;
            create)
                _arguments \
                    '--type[Plugin type]:type:(library binary)' \
                    '--dir[Output directory]:directory:_directories' \
                    '(-h --help)'{-h,--help}'[Show help for plugin create]' \
                    ':plugin-name:'
                ;;
            info)
                _arguments \
                    '(-h --help)'{-h,--help}'[Show help for plugin info]' \
                    ':plugin-name:'
                ;;
        esac
    fi
}

# Upgrade command completion
_demo_rust_upgrade() {
    _arguments \
        '--check[Check for updates without installing]' \
        '--version[Install specific version]:version:' \
        '--pre[Include pre-release versions]' \
        '--dry-run[Show what would be done without doing it]' \
        '(-h --help)'{-h,--help}'[Show help for upgrade command]'
}

# Custom completion functions for specific option types

# Load the completion
_demo_rust "$@"

# Enable completion caching for better performance
zstyle ':completion:*:*:demo_rust:*' cache-policy _demo_rust_cache_policy
_demo_rust_cache_policy() {
    # Cache completions for 1 hour
    [[ -n "$1" && "$1" -ot "$(date -v-1H)" ]]
}

# Add color support
zstyle ':completion:*:*:demo_rust:*:descriptions' format '%F{green}-- %d --%f'
zstyle ':completion:*:*:demo_rust:*:commands' group-name commands
zstyle ':completion:*:*:demo_rust:*:options' group-name options